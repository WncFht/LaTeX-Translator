{
  "openai": {
    "apiKey": "sk-your-api-key",
    "baseUrl": "https://api.openai.com/v1",
    "model": "gpt-3.5-turbo",
    "temperature": 0.3,
    "timeout": 60000
  },
  "translation": {
    "defaultTargetLanguage": "简体中文",
    "defaultSourceLanguage": "英文",
    "maskOptions": {
      "regularEnvironments": ["figure", "table", "algorithm", "enumerate", "itemize", "tabular", "lstlisting", "verbatim", "Verbatim", "lstinputlisting", "minted", "listings"],
      "mathEnvironments": ["equation", "align", "gather", "multline", "eqnarray", "matrix", "pmatrix", "bmatrix", "array", "aligned", "cases", "split"],
      "commands": ["ref", "cite", "eqref", "includegraphics", "url", "label", "textit", "textbf", "texttt", "emph", "href", "caption", "footnote", "item"],
      "maskInlineMath": true,
      "maskDisplayMath": true,
      "maskComments": true,
      "maskPrefix": "MASK_"
    }
  },
  "output": {
    "defaultOutputDir": "./output"
  }
} 